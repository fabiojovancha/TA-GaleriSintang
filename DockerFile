# Build frontend (Vue + Inertia) dengan Node
FROM node:20-alpine as node-build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build


# Laravel + PHP setup
FROM php:8.2-fpm-alpine

# Install system dependencies
RUN apk add --no-cache \
    bash \
    curl \
    libpng \
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    libzip-dev \
    zip \
    unzip \
    oniguruma-dev \
    icu-dev \
    libxml2-dev \
    git \
    mysql-client \
    nodejs \
    npm

# Install PHP extensions
RUN docker-php-ext-install pdo pdo_mysql mbstring zip exif pcntl bcmath intl

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www

# Copy project files
COPY . .

# Copy built frontend from Node image
COPY --from=node-build /app/public/js /var/www/public/js
COPY --from=node-build /app/public/css /var/www/public/css

# Set permissions
RUN chown -R www-data:www-data /var/www && chmod -R 755 /var/www

# Run Laravel setup commands
RUN composer install --no-dev --optimize-autoloader \
 && php artisan config:cache \
 && php artisan route:cache \
 && php artisan view:cache

EXPOSE 8000

CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]
